# Site Configuration
SITE_URL=https://your-ngrok-url.ngrok.io

# Zoom OAuth Credentials
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret
ZOOM_REDIRECT_URL=https://your-supabase-url.supabase.co/auth/v1/callback

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Upstash Redis Configuration
NEXT_PUBLIC_UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
NEXT_PUBLIC_UPSTASH_REDIS_REST_TOKEN=your_redis_token

# Redis Encryption Key (AES-256-GCM)
# SECURITY: Keep this key secret and never commit to version control
# Generate a secure key using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
REDIS_ENCRYPTION_KEY=your_64_character_hex_encryption_key

# Optional: Zoom User ID (for Team Chat testing - temporary solution)
# In production, this should be retrieved from Zoom SDK getUserContext()
NEXT_PUBLIC_ZOOM_USER_ID=your_zoom_user_id

# Optional: OpenAI API Key (for seed data generation)
OPENAI_API_KEY=your_openai_api_key
